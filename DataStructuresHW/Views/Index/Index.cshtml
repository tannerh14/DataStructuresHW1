
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        th {
            border: 1px solid white;
            text-align: center;
            background-color: white;
            color: black;
        }

        td {
            border: 1px solid white;
            text-align: center;
        }

        body {
            background-image: url("https://shortysplacediner.com/wp-content/uploads/2017/10/burger-background-flip.jpg");
            background-color: #cccccc; /* Full height */
            height: 100%;
            background-repeat: no-repeat; 
            background-size: auto;
            /* Center and scale the image nicely */ 
        }

        a:link {
            color: grey;
            background-color: transparent;
            text-decoration: none;
        }

        a:visited {
            color: green;
            background-color: transparent;
            text-decoration: none;
        }

        a:hover {
            color: darkblue;
            background-color: transparent;
            text-decoration: underline;
        }

        a:active {
            color: grey;
            background-color: transparent;
            text-decoration: underline;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        h2 {
            margin-top: 20px;
            margin-right: 200px;
        }
    </style>
</head>
<body text="white">

    <!--This will align the header to the right. Bring in viewbag-->
    <h2 align="right" padding-right: 150px>Burger Totals</h2>
    @Html.Raw((String)ViewBag.Output)
    
</body>
</html>

